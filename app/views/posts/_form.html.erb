<h1>Make a Post</h1>
<%= form_for @post do |f|  %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.text_area :content%>
  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>